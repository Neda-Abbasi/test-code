{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // Correct setting for ES Modules with Node.js resolution
    "moduleResolution": "NodeNext", // Ensures the TypeScript resolver handles ESM imports correctly
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
